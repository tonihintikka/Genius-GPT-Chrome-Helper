{
    "manifest_version": 2,
    "name": "ChatGPT Helper",
    "version": "1.0",
    "description": "Get AI suggestions when typing in text fields",
    "permissions": [
      "activeTab",
      "storage",
      "https://*.openai.com/"
    ],
    "options_page": "options.html",
    "content_scripts": [
      {
        "matches": ["http://*/*", "https://*/*"],
        "js": ["content.js"]
      }
    ]
  }