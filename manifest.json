  {
    "manifest_version": 3,
    "name": "Genius GPT Chrome Helper",
    "version": "1.0",
    "description": "Get AI-powered text suggestions in any text field.",
    "permissions": ["activeTab", "scripting"],
    "icons": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"]
      }
    ]
  }